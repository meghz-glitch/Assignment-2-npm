<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head", { title: "Home - Dance World" }) %>
</head>
<body>
    <%- include("../partials/header") %>
    <main>
        <% if (typeof heading !== "undefined") { %>
            <h2><%= heading %></h2>
        <% } %>

        <% if (typeof description !== "undefined") { %>
            <p><%= description %></p>
        <% } %>

        <div class="grid-container">
            <% if (typeof items !== "undefined" && Array.isArray(items) && items.length > 0) { %>
                <% items.forEach(item => { %>
                    <div class="card">
                        <% if (typeof item.img !== "undefined") { %>
                            <img src="<%= item.img %>" alt="<%= item.name %>" class="responsive-img">
                        <% } %>

                        <% if (typeof item.name !== "undefined") { %>
                            <h3><%= item.name %></h3>
                        <% } %>

                        <% if (typeof item.description !== "undefined") { %>
                            <p><%= item.description %></p>
                        <% } %>

                        <% if (typeof basePath !== "undefined" && typeof item.slug !== "undefined" && typeof linkText !== "undefined") { %>
                            <a href="<%= basePath %>/<%= item.slug %>">
                                <%= linkText %>
                            </a>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No items available.</p>
            <% } %>
        </div>
    </main>
    <%- include("../partials/footer") %>
</body>
</html>
