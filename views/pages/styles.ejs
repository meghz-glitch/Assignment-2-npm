<!-- views/pages/styles.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dance Styles - Dance World</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include("../partials/header") %>
    <main>
        <h2>Explore Dance Styles</h2>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam suscipit consequat est.</p>

        <div class="grid-container">
            <% styles.forEach(style => { %>
                <div class="card">
                    <img src="<%= style.img %>" alt="<%= style.name %>">
                    <h3><%= style.name %></h3>
                    <p><%= style.description %></p>
                    <a href="/styles/<%= style.name.toLowerCase() %>">Learn More</a>
                </div>
            <% }); %>
        </div>
    </main>
    <%- include("../partials/footer") %>
</body>
</html>
